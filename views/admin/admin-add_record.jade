extends ../jade-bootstrap/_bootstrap
block body
  -var active='records'
  -var record = {pid: '', ptitle: '', pdesc: '', psolu: ''}
  include admin-header
  .container
    .add-record.row.col-md-8
      form#form-add_record(action= 'req-add_record' method= 'post')
        if ret
          .form-group
            if ret.success
              +alert-x-info(ret.msg)
            else
              +alert-x-warning(ret.msg)
        include ../base/record-form_body
        .form-group
          button.btn.btn-primary#btn-psubmit(type='submit') 提交
append styles
  link(rel="stylesheet" type='text/css' href='/stylesheets/admin/admin-add_record.css')
append scripts
  script(type='text/javascript' src='/showdown/showdown.min.js')
  script(type='text/javascript' src= '/javascripts/admin/admin-add_record.js')